<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A6V" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Fullscreen" parent="Theme.A6V">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="backgroundColor">@color/background_color</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fullscreen.Splash" parent="Theme.A6V">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BackBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">130dp</item>
        <item name="android:layout_marginStart">@dimen/margin_30</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/margin_15</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:transitionName">back</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>


    <style name="NormalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AboutBigTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AboutNormalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textColor">@color/about_content_text_color</item>
    </style>

    <style name="MineRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_bg_mine_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FeedbackDialogTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
    </style>

    <style name="FeedbackEditTextStyle">
        <item name="android:layout_width">800dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_50</item>
        <item name="android:background">@drawable/bg_feedback_et</item>
        <item name="android:padding">@dimen/margin_15</item>
        <item name="android:textColorHint">@color/search_icon_tint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:imeActionLabel">确定</item>
        <item name="android:maxLength">100</item>
    </style>

</resources>